        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.hora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diasSemana)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activar)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.id }, new { @class = "btn btn-primary" }) |
